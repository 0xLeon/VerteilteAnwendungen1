<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
	<welcome-file-list>
		<welcome-file>Index</welcome-file>
	</welcome-file-list>
	<error-page>
		<exception-type>com.leon.hfu.web.ticketSale.exception.EventException</exception-type>
		<location>/Error</location>
	</error-page>
	<error-page>
		<exception-type>com.leon.hfu.web.ticketSale.exception.TicketSaleException</exception-type>
		<location>/Error</location>
	</error-page>
	<error-page>
		<exception-type>javax.servlet.ServletException</exception-type>
		<location>/Error</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/lib/templates/t404.html</location>
	</error-page>
	<jsp-config>
		<taglib>
			<taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
			<taglib-location>/WEB-INF/lib/javax.servlet.jsp.jstl-1.2.1.jar</taglib-location>
		</taglib>
	</jsp-config>
</web-app>
